<section class="py-5">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-3">
                    <div class="card h-150">
                        <!-- Sale badge-->
                        <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                        <!-- Product image-->
                        <div>
                            <a href="@Url.Action("ProductDetail", "Products", new { id = item.Id }, null)">
                                <img class="card-img-top" src="@Url.Content("~/image/"+item.Image)" asp-append-version="true" />
                            </a>
                        </div>
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                @Html.ActionLink(item.ModelName, "ProductDetail", "Products", new { id = item.Id }, null)                               
                            </div>
                            <div class="text-center">
                                <!-- Product price-->
                                @item.Price&nbsp;VNĐ
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>